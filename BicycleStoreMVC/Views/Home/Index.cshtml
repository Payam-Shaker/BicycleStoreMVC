@model IEnumerable<BicycleStore.Domain.Models.Product>
@{
    ViewData["Title"] = "Home Page";
}

<body>
    <div>
        <div class="text-center">
            <h1 class="display-4">Bicycle Store</h1>
        </div>
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">  
            <div class="carousel-inner">
                <div class="carousel-item active">
                  <img src="~/Images/Photo1.jpg"  width="1000" height="500" alt="" />
                </div>
                <div class="carousel-item">
                  <img src="~/Images/Photo2.jpg"  width="1000" height="500" alt="" />
                </div>
                <div class="carousel-item">
                  <img src="~/Images/Photo3.jpg"  width="1000" height="500" alt="" />
                </div>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
        <div>
            <h1 class="display-4">Our newest products...</h1>

            <div class="container">
                <div class="position-relative row ">
                    @foreach (var p in Model.Take(3))
                    {
                        <div class="card-group position-relative">

                            <div class="row-cols-3 row-cols-md-2">
                                <div class="col mb-4">

                                    <div class="card position-relative">
                                        <div class=" card-block ">
                                            <h4 class="card-title">@p.ProductName</h4>
                                            <p class="card-text">@p.ModelYear ; @p.Brand.BrandName ; @p.ListPrice </p>
                                            <a class="card-img">  <img src="@Html.DisplayFor(modelItem => p.Image)" /></a>
                                            <a href="http://publicdomainarchive.com/free-stock-photos-chicago-
                         skyline-night-hotel-71-wacker-drive/"
                                               class="btn btn-primary">Visit Source</a>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>

                    }
                </div>
            </div>


                </div>
                <div>
                    @Html.Partial("_searchProducts")
                </div>
            </div>
</body>
